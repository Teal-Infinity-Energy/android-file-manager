<?xml version="1.0" encoding="utf-8"?>
<!-- 
    OneTap Shortcuts AndroidManifest.xml
    
    This manifest includes:
    - INSTALL_SHORTCUT permission for creating home screen shortcuts
    - READ_EXTERNAL_STORAGE / READ_MEDIA_* permissions for accessing files
    - Share Sheet intent filters for receiving text, images, and videos
    - FileProvider for sharing files
    
    See ANDROID_SETUP.md for complete setup instructions.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    
    <!-- Storage permissions for file access -->
    <!-- For Android 12 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="29" />
    
    <!-- For Android 13+ (granular media permissions) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <!-- Scheduled Actions: Exact alarms -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Scheduled Actions: Re-register alarms after reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Scheduled Actions: Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Vibration for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true">

        <activity
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|smallestScreenSize|screenLayout|uiMode"
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBarLaunch"
            android:launchMode="singleTask"
            android:exported="true">
            
            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Share Sheet: Handle shared text (URLs, etc.) -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
            
            <!-- Share Sheet: Handle shared images -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            
            <!-- Share Sheet: Handle shared videos -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
            
            <!-- Share Sheet: Handle shared documents -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/*" />
            </intent-filter>

            <!-- Internal video player fallback action -->
            <intent-filter>
                <action android:name="app.onetap.PLAY_VIDEO" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <!-- OAuth deep link callback (Android App Links approach) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data 
                    android:scheme="https"
                    android:host="id-preview--2fa7e10e-ca71-4319-a546-974fcb8a4a6b.lovable.app"
                    android:pathPrefix="/auth-callback" />
            </intent-filter>

        </activity>

        <!-- Video Proxy Activity - transparent activity for launching video shortcuts -->
        <activity
            android:name=".VideoProxyActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="false"
            android:noHistory="true"
            android:excludeFromRecents="true">
        </activity>

        <!-- PDF Proxy Activity - transparent activity for launching PDF shortcuts -->
        <!-- Also exported to appear in Android's app picker for PDFs -->
        <activity
            android:name=".PDFProxyActivity"
            android:label="OneTap PDF Viewer"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="true"
            android:noHistory="true"
            android:excludeFromRecents="true">
            
            <!-- Intent filter for content:// PDFs (e.g. from Files app, Drive) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" android:mimeType="application/pdf" />
            </intent-filter>
            
            <!-- Intent filter for file:// PDFs -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" android:mimeType="application/pdf" />
            </intent-filter>
            
        </activity>

        <!-- Native video player used for <=50MB videos (reliable vs WebView) -->
        <!-- PiP support requires Android 8.0+ (API 26+) -->
        <activity
            android:name=".NativeVideoPlayerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:exported="false"
            android:supportsPictureInPicture="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:launchMode="singleTask"
            android:resizeableActivity="true" />

        <!-- Desktop WebView Activity - custom WebView with User-Agent control -->
        <activity
            android:name=".DesktopWebViewActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden" />

        <!-- Notification Click Activity - tracks notification clicks before executing action -->
        <activity
            android:name=".NotificationClickActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="false"
            android:noHistory="true"
            android:excludeFromRecents="true" />

        <!-- Scheduled Actions: Alarm Receiver -->
        <receiver
            android:name=".ScheduledActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="app.onetap.SCHEDULED_ACTION" />
            </intent-filter>
        </receiver>

        <!-- Scheduled Actions: Boot Receiver (restore alarms after reboot) -->
        <receiver
            android:name=".BootReceiver"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Quick Create Widget (1x1) -->
        <receiver
            android:name=".QuickCreateWidget"
            android:exported="true"
            android:label="@string/widget_quick_create_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_quick_create_info" />
        </receiver>

        <!-- Favorites Widget (4x2) -->
        <receiver
            android:name=".FavoritesWidget"
            android:exported="true"
            android:label="@string/widget_favorites_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="app.onetap.WIDGET_DATA_CHANGED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_favorites_info" />
        </receiver>

        <!-- Widget Service for Favorites GridView -->
        <service
            android:name=".FavoritesWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

        <!-- Widget Click Receiver -->
        <receiver
            android:name=".WidgetClickReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="app.onetap.WIDGET_ITEM_CLICK" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
